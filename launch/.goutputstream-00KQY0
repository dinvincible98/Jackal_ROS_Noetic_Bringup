<launch>
    <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch"/>

    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="points2scan" >
        <remap from="cloud_in" to="velodyne_points"/>
        <remap from="scan" to="front/scan"/>
    </node>
    
    <!-- Static transform -->
    <node pkg="tf" type="static_transform_publisher" name="map2base" args="0 0.0 0 0 0 0 /map /base_link 100" />      
    <node pkg="tf" type="static_transform_publisher" name="base2velodyne" args="0 0 0.3 0 0 0 /base_link /velodyne 100"/>
    <node pkg="tf" type="static_transform_publisher" name="velodyne2front_laser" args="0 0 0 0 0 0 /velodyne /front_laser 100"/>
    <node pkg="tf" type="static_transform_publisher" name="base2front_left_wheel" args="0.18 0.178 0.0 0 0 0 /base_link /front_left_wheel_link 100"/>
    <node pkg="tf" type="static_transform_publisher" name="base2front_right_wheel" args="0.18 -0.178 0 0 0 0 /base_link /front_right_wheel_link 100"/>
    <node pkg="tf" type="static_transform_publisher" name="base2rear_left_wheel" args="-0.18 0.178 0.0 0 0 0 /base_link /rear_left_wheel_link 100"/>
    <node pkg="tf" type="static_transform_publisher" name="base2rear_right_wheel" args="-0.18 -0.178 0 0 0 0 /base_link /rear_right_wheel_link 100"/>

</launch>
